{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "passkey": {
                "display_name": true
              }
            }
          }
        },
        "first_name": {
          "type": "string",
          "title": "First Name",
          "minLength": 1
        },
        "last_name": {
          "type": "string",
          "title": "Last Name",
          "minLength": 1
        }
      },
      "required": ["email"],
      "additionalProperties": false
    }
  }
}
